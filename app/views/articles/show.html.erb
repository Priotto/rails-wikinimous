<h1><%= @article.title %></h1> .
  <%= link_to  edit_article_path(@article), data: {turbo_method: :edit, turbo_confirm: "Do you want to edit this article?"} do %>
    <i class="fa-solid fa-pencil"></i>
  <% end %>
  <%= link_to  article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Do you want to destroy this article?"} do %>
    <i class="fa-solid fa-trash-can"></i>
  <% end %>
<p><%= @article.content %></p>
